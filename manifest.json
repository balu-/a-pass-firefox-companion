{

  "manifest_version": 2,
  "name": "APassCompanion",
  "version": "0.3",

  "description": "Enables APass to send Url, User & Password to browser to auto-login",

  "icons": {
    "48": "icons/icon_48x48.png",
    "96": "icons/icon_96x96.png"
  },

  //"host_permissions": [ "*://a-pass.de/*", "*://*.a-pass.de/*", "<all_urls>" ],
  "permissions" : [ "nativeMessaging", "activeTab", "scripting" ],

  "background": { 
    "scripts": ["bg.js"]
  },

  "browser_specific_settings": {
  "gecko": {
    "id": "firefox-companion@a-pass.de",
    "strict_min_version": "110.0"
  }
}, 
"browser_action": {
    "default_icon": "icons/icon_96x96.png"
  }

}
